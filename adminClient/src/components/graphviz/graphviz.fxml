<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.301" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.graphviz.GraphvizController">
   <content>
      <GridPane alignment="CENTER" minHeight="362.0" minWidth="500.0" prefHeight="600.0" prefWidth="582.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="562.0" minHeight="10.0" prefHeight="546.0" valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints maxHeight="562.0" minHeight="10.0" prefHeight="44.0" valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="82.0" valignment="BOTTOM" vgrow="NEVER" />
        </rowConstraints>
         <children>
            <ImageView fx:id="myImage" fitHeight="302.0" fitWidth="560.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="BOTTOM_CENTER" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" GridPane.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" spacing="3.0" VBox.vgrow="NEVER">
                     <children>
                        <Label text="Path of .viz file:" />
                        <TextField fx:id="dotFileTextField" alignment="CENTER" editable="false" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" fillHeight="false" VBox.vgrow="NEVER">
                     <children>
                        <Label text="Path of .png file:" />
                        <TextField fx:id="pngFileTextField" alignment="CENTER" editable="false" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </GridPane>
   </content>
</ScrollPane>
