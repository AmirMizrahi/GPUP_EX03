                  <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="400.0" minWidth="400.0">
                     <content>
                        <TabPane tabClosingPolicy="UNAVAILABLE">
                          <tabs>
                            <Tab text="Target Selection">
