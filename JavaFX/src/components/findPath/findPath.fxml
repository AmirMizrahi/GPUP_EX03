<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.301" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.findPath.FindPathController">
   <content>
      <GridPane minHeight="400.0" minWidth="500.0" prefHeight="500.0" prefWidth="700.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="100.0" prefHeight="120.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <GridPane minWidth="200.0">
              <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="112.0" minWidth="10.0" prefWidth="98.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="175.0" minWidth="10.0" prefWidth="175.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="90.0" prefHeight="110.0" valignment="CENTER" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <ComboBox fx:id="destinationComboBox" onAction="#destinationComboBoxAction" prefHeight="31.0" prefWidth="104.0" GridPane.columnIndex="3" />
                  <Label text="Source:" />
                  <Label layoutX="63.0" layoutY="124.0" text="Destination:" GridPane.columnIndex="2" />
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonAction" text="Start" GridPane.columnIndex="5" />
                  <VBox alignment="CENTER_LEFT" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <children>
                        <RadioButton fx:id="dependsOnRadio" mnemonicParsing="false" onAction="#dependsOnRadioAction" prefWidth="110.0" text="Depends On">
                           <toggleGroup>
                              <ToggleGroup fx:id="relation" />
                           </toggleGroup></RadioButton>
                        <RadioButton fx:id="requiredForRadio" mnemonicParsing="false" onAction="#requiredForRadioAction" text="Required For" toggleGroup="$relation" />
                     </children>
                     <GridPane.margin>
                        <Insets left="5.0" />
                     </GridPane.margin>
                  </VBox>
                  <ComboBox fx:id="sourceComboBox" layoutX="448.0" layoutY="57.0" onAction="#sourceComboBoxAction" prefHeight="31.0" prefWidth="104.0" GridPane.columnIndex="1" />
               </children>
            </GridPane>
            <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
               <content>
                  <GridPane minHeight="300.0" minWidth="300.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <ListView fx:id="resultListView" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </GridPane>
               </content>
            </ScrollPane>
         </children>
      </GridPane>
   </content>
</ScrollPane>
